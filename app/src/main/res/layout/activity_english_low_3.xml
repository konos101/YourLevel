<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtDescripSes2"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:text="Choose the correct translation."
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/txtSection"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/txtFrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="0) Libro"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/txtDescripSes2"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:onClick="onNext"
            android:text="Next"
            app:layout_constraintTop_toBottomOf="@+id/radioOptions2"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.142" />

        <TextView
            android:id="@+id/txtSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:text="Section 3"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtFrase2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="111dp"
            android:layout_marginTop="25dp"
            android:text="Hablar"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/txtFrase"
            app:layout_constraintTop_toBottomOf="@+id/txtDescripSes2" />

        <RadioGroup
            android:id="@+id/radioOptions2"
            android:layout_width="156dp"
            android:layout_height="207dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="29dp"
            app:layout_constraintLeft_toRightOf="@+id/radioOptions2"
            app:layout_constraintTop_toBottomOf="@+id/txtFrase2">

            <RadioButton
                android:id="@+id/opcion11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:checked="true"
                android:enabled="false"
                android:text="Speak"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/txtFrase"
                tools:layout_editor_absoluteX="44dp" />

            <RadioButton
                android:id="@+id/opcion22"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:enabled="false"
                android:text="Computer"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/opcion11"
                tools:layout_editor_absoluteX="44dp" />

            <RadioButton
                android:id="@+id/opcion33"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:enabled="false"
                android:text="Book"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/opcion2"
                tools:layout_editor_absoluteX="44dp" />

            <RadioButton
                android:id="@+id/opcion44"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:enabled="false"
                android:text="Happy"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/opcion11"
                tools:layout_editor_absoluteX="44dp" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/radioOptions2"
            android:layout_width="156dp"
            android:layout_height="207dp"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/txtFrase"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toLeftOf="parent">

            <RadioButton
                android:id="@+id/opcion1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:enabled="false"
                android:text="Speak"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/txtFrase"
                tools:layout_editor_absoluteX="44dp" />

            <RadioButton
                android:id="@+id/opcion2"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:checked="true"
                android:enabled="false"
                android:text="Computer"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/opcion11"
                tools:layout_editor_absoluteX="44dp" />

            <RadioButton
                android:id="@+id/opcion3"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:checked="true"
                android:enabled="false"
                android:text="Book"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/opcion2"
                tools:layout_editor_absoluteX="44dp" />

            <RadioButton
                android:id="@+id/opcion4"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:enabled="false"
                android:text="Happy"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/opcion11"
                tools:layout_editor_absoluteX="44dp" />

        </RadioGroup>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>